                    <div class="modal-footer">
                        <button class="btn btn-primary" data-dismiss="modal" id="cancel">Cancel</button>
                        <button class="btn btn-danger" data-dismiss="modal" id="brand_sub_data" type="submit">Apply</button>
                    </div>
                </div>
            </div>
        </div>
